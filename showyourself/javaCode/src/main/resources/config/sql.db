    `frameworks` varchar(200) DEFAULT NULL COMMENT '开发框架',
    `status` int(1) NOT NULL COMMENT '0-不显示，1-显示',
    `leave_reason` varchar(200) DEFAULT NULL COMMENT '离职原因',
    `user_id` int(20) NOT NULL COMMENT '用户Id',
     key `FK3454C9E613C6A52A` (`user_id`),
     constraint `FK3454C9E613C6A52A` foreign key (`user_id`) references myinfo (`id`),
