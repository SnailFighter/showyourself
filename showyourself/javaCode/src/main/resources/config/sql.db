DROP TABLE IF EXISTS `myinfo`;
CREATE TABLE IF NOT EXISTS `myinfo` (
  `id` int(20) NOT NULL COMMENT 'ID' auto_increment,
  `create_time` datetime DEFAULT NULL COMMENT '建立日期',
  `modify_time` datetime DEFAULT NULL COMMENT '修改日期',
  `name` varchar(64) DEFAULT NULL COMMENT '姓名',
  `sex` varchar(255) NOT NULL COMMENT '性别',
  `age` int(3) NOT NULL COMMENT '年龄',
  `school_id` int(20) NOT NULL COMMENT '学校id',
  `professional` varchar(255) NOT NULL COMMENT '专业',
  `degree` VARCHAR(16) NOT NULL COMMENT '学历',
  `school_start_time` datetime DEFAULT NULL COMMENT '大学开始时间',
  `school_end_time` datetime DEFAULT NULL COMMENT '大学结束时间',
  `login_ip` varchar(255) DEFAULT NULL COMMENT '最后登录IP',
  `password` varchar(255) NOT NULL COMMENT '密码',
  `status` int(1) NOT NULL COMMENT '0-不显示，1-显示',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;



DROP TABLE IF EXISTS `school`;
CREATE  TABLE IF NOT EXISTS `school` (
  `id` int(20) NOT  NULL COMMENT 'ID' auto_increment,
  `school_name` VARCHAR(255) NOT NULL COMMENT '学校名称',
  PRIMARY KEY(`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

DROP TABLE IF EXISTS `experience`;
